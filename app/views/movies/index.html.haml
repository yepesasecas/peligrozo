  .row-fluid
    .category
      %h3 CARTELERA
      .slider
        #makeMeScrollable
          - @movies.each do |movie|
            - next if movie.poster_path.nil?
            .upcoming-movie
              %a{href: ".movie-details", "data-movie-id"=>movie.id, class:"movie-poster"}
                / .cartelera-date.center
                /   = distance_of_time_in_words_to_now(movie.created_at).upcase
                /   EN FUNCIÃ“N
                .upcoming-poster
                  = image_tag movie.poster_path, class:"poster"
    .category
      %h3 PROXIMAMENTE
      = render "movies/upcoming_slider"
.modal-container