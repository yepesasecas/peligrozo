- if current_user
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#", title: "user-dropdown"}
      = current_user.name
      %span.caret
    %ul.dropdown-menu{role: "menu"}
      %li= link_to "TUS CINES", user_favorite_theaters_path(current_user)
      %li= link_to "GENEROS", user_favorite_genres_path(current_user)
      %li= link_to "TUS AMIGOS", user_invite_friends_path(current_user)
      %li= link_to "HISTORIAL", history_user_path(current_user)
      %li= link_to "PELI PALS", "#"
      %li.divider
      - if current_user_is_an_admin?
        %li= link_to movie_match_helper, matches_index_path
        %li= link_to "ADMIN TOOL", rails_admin_path
        %li.divider
      %li= link_to "CERRAR SESION", signout_path, id: "sign_out"

- else
  = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-primary"