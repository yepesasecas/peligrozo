%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .row-fluid
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .logo
          = link_to root_path do
            = image_tag "logo/normal.png", id:"logo"
      .collapse.navbar-collapse
        %ul.nav.navbar-nav
          = render 'nav_bar/links'
        %ul.nav.navbar-nav.navbar-right
          = render 'nav_bar/dropdown'
  .container-fluid.navbar-section.visible-lg-block.visible-md-block
    .row-fluid
      %ul.nav.navbar-nav
        = yield :nav_bottom
